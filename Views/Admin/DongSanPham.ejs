<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Sound World</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/Images/Home/logo.png">
    <!-- Custom Stylesheet -->
    <link href="/plugins/tables/css/datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="/Css/admin.css" rel="stylesheet">

</head>

<body>
    <%- include("layouts/header") -%>

        <!--**********************************x`x`
            Content body start
        ***********************************-->
        <div class="content-body">


            <!-- row -->

            <div class="container-fluid">
                <div class="row">
                    <% if(message!=''){%>
                        <div class="alert success" id="success-alert" style="text-align: center; width: 800px;margin-left: 150px;">
                            <span class="closebtn">&times;</span>
                            <strong><%= message%></strong>
                        </div>
                        <%}%>
                            <% if(messageFail!=''){%>
                                <div class="alert danger" id="success-alert" style="text-align: center; width: 800px;margin-left: 150px;">
                                    <span class="closebtn">&times;</span>
                                    <strong><%= messageFail%></strong>
                                </div>
                                <%}%>
                                    <div class="col-lg-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="card-title">
                                                    <h4>Thêm dòng sản phẩm</h4>
                                                </div>
                                                <div class="form-validation">
                                                    <form class="form-valide" action="/admin/dongsanpham/" method="post">
                                                        <div class="form-group row">
                                                            <label class="col-lg-4 col-form-label" for="tenloaisp">Tên dòng sản phẩm <span class="text-danger">*</span>
                                            </label>
                                                            <div class="col-lg-6">
                                                                <input type="text" class="form-control" id="tendongsp" name="tendongsp" placeholder="Nhập tên loại sản phẩm.." required>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row">
                                                            <div class="col-lg-8 ml-auto">
                                                                <button type="submit" class="btn btn-primary">Thêm mới</button>
                                                            </div>
                                                        </div>
                                                    </form>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% categories.forEach(data => { %>
                                        <div class="col-lg-6">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="card-title">
                                                        <h4>
                                                            <%= data.name %>
                                                        </h4>
                                                        <a href="#" data-toggle="modal" data-target="#addcategory<%= data.id %>"><i class="fas fa-plus"></i> Thêm</a> |
                                                        <a href="#" data-toggle="modal" data-target="#deletecategory<%= data.id %>"><i class="fas fa-trash-alt"></i> Xóa</a> |
                                                        <a href="#" data-toggle="modal" data-target="#updatecategory<%= data.id %>"><i class="fas fa-edit"></i>sửa</a>
                                                        <!-- The Modal Add-->
                                                        <div class="modal fade" id="addcategory<%= data.id %>">
                                                            <form class="" action="/admin/dongsanpham/catechild" method="post">

                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">

                                                                        <div class="modal-header">
                                                                            <h4 class="modal-title">
                                                                                <%= data.name %>
                                                                            </h4>
                                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                        </div>

                                                                        <div class="modal-body">
                                                                            <div class="form-group row">
                                                                                <label class="col-lg-4 col-form-label" for="tenloaisp">Tên loại sản phẩm <span class="text-danger">*</span>
                                                                </label>
                                                                                <div class="col-lg-6">
                                                                                    <input type="text" class="form-control" id="tenloaisp" name="tenloaisp" placeholder="Nhập tên loại sản phẩm.." required>
                                                                                </div>
                                                                                <input type="text" name="idcat" value="<%= data.id %>" readonly hidden>
                                                                            </div>
                                                                        </div>

                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                            <button type="submit" class="btn btn-primary">Thêm mới</button>

                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </form>

                                                        </div>
                                                        <!-- The Modal Update-->
                                                        <div class="modal fade" id="updatecategory<%= data.id %>">
                                                            <form class="" action="/admin/dongsanpham/category/<%=data.id%>" method="post">

                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">

                                                                        <div class="modal-header">
                                                                            <h4 class="modal-title">
                                                                                <%= data.name %>
                                                                            </h4>
                                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                        </div>

                                                                        <div class="modal-body">
                                                                            <div class="form-group row">
                                                                                <label class="col-lg-4 col-form-label" for="tendongsp">Tên dòng sản phẩm <span class="text-danger">*</span>
                                                                </label>
                                                                                <div class="col-lg-6">
                                                                                    <input type="text" value="<%= data.name %>" class="form-control" id="tendongsp" name="tendongsp" placeholder="Nhập tên dòng sản phẩm.." required>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                            <button type="submit" class="btn btn-primary">Cập nhật</button>

                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </form>

                                                        </div>
                                                        <!-- The Modal Delete-->
                                                        <div class="modal fade" id="deletecategory<%= data.id %>">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">

                                                                    <div class="modal-header">
                                                                        <h4 class="modal-title">
                                                                            <%= data.name %>
                                                                        </h4>
                                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                    </div>

                                                                    <div class="modal-body">
                                                                        Bạn có chắc muốn xóa dòng sản phẩm này?
                                                                    </div>

                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                        <button type="button" class="btn btn-danger" onclick="location.href='dongsanpham/delete/category/<%= data.id %>'">Xóa</button>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="table-responsive">
                                                        <table class="table">
                                                            <thead>
                                                                <tr>
                                                                    <th>#</th>
                                                                    <th>Tên</th>
                                                                    <th>Thao tác</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% let a = 1 %>
                                                                    <% data.catechildren.forEach(function(data){  %>
                                                                        <tr>
                                                                            <th>
                                                                                <%= a %>
                                                                            </th>
                                                                            <td>
                                                                                <%= data.name %>
                                                                            </td>
                                                                            <td><a href="#" data-toggle="modal" data-target="#a<%= data.id %>"><i class="fas fa-trash-alt"></i> Xóa</a> |
                                                                                <a href="#" data-toggle="modal" data-target="#updatecatechild<%= data.id %>"><i class="fas fa-edit"></i>sửa</a>
                                                                                </span>
                                                                                <% a++ %>
                                                                        </tr>
                                                                        <!-- The Modal Delete-->
                                                                        <div class="modal fade" id="a<%= data.id %>">
                                                                            <div class="modal-dialog">
                                                                                <div class="modal-content">

                                                                                    <div class="modal-header">
                                                                                        <h4 class="modal-title">
                                                                                            <%= data.name %>
                                                                                        </h4>
                                                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                                    </div>

                                                                                    <div class="modal-body">
                                                                                        Bạn có chắc muốn xóa loại sản phẩm này?
                                                                                    </div>

                                                                                    <div class="modal-footer">
                                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                                        <button type="button" class="btn btn-danger" onclick="location.href='dongsanpham/delete/<%= data.id %>'">Xóa</button>
                                                                                    </div>

                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <!-- The Modal Update-->
                                                                        <div class="modal fade" id="updatecatechild<%= data.id %>">
                                                                            <form class="" action="/admin/dongsanpham/<%=data.id%>" method="post">

                                                                                <div class="modal-dialog">
                                                                                    <div class="modal-content">

                                                                                        <div class="modal-header">
                                                                                            <h4 class="modal-title">
                                                                                                <%= data.name %>
                                                                                            </h4>
                                                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                                        </div>

                                                                                        <div class="modal-body">
                                                                                            <div class="form-group row">
                                                                                                <label class="col-lg-4 col-form-label" for="tenloaisp">Tên loai sản phẩm <span class="text-danger">*</span>
                                                                        </label>
                                                                                                <div class="col-lg-6">
                                                                                                    <input type="text" value="<%= data.name %>" class="form-control" id="tenloaisp" name="tenloaisp" placeholder="Nhập tên loại sản phẩm.." required>
                                                                                                </div>
                                                                                                <input type="text" name="idcat" value="<%= data.idCat %>" readonly hidden>
                                                                                            </div>
                                                                                        </div>

                                                                                        <div class="modal-footer">
                                                                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                                            <button type="submit" class="btn btn-primary">Cập nhật</button>

                                                                                        </div>

                                                                                    </div>
                                                                                </div>
                                                                            </form>

                                                                        </div>
                                                                        <% }) %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
        <%- include("layouts/footer") -%>


            </div>
            <!--**********************************
        Main wrapper end
    ***********************************-->

            <!--**********************************
        Scripts
    ***********************************-->
            <script src="/js/admin/close-alert.js"></script>
            <%- include("layouts/script") -%>

</body>

</html>